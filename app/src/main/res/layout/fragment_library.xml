<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="MissingDefaultResource">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:gravity="center"
            android:background="@color/Greenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">
                <TextView
                    android:id="@+id/comicsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comics"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:clickable="true"
                    android:onClick="@{() -> viewModel.onComicsClick()}" />
                <TextView
                android:id="@+id/novelsTextView"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novels"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:clickable="true"
                android:onClick="@{() -> viewModel.onNovelsClick()}" />

            </LinearLayout>

<!--search-->
            <LinearLayout
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/m10"
                        android:layout_marginEnd="@dimen/m10"
                        android:layout_marginBottom="@dimen/m10"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_color">
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/m10"
                            android:src="@drawable/ic_action_sharch"
                            android:contentDescription="@string/image" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="@string/search"
                            android:inputType="text"
                            android:autofillHints="@string/products" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0dp"/>
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/m10"
                            android:src="@drawable/camera"
                            android:contentDescription="@string/image" />
                    </LinearLayout>
<!--secreteLove-->
            <LinearLayout
                android:id="@+id/secreteLove"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/screteLove"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/container"
                        app:cardCornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgURL"
                            android:layout_width="190dp"
                            android:layout_height="130dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_12"
                            android:contentDescription="@string/image" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtTitle"
                            tools:text="Secrete Love"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/Greenie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtD"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/SecreteLove"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btnSecreteLove"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Read"
                                android:textColor="@color/white">
                            </Button>
                            <Button
                                android:id="@+id/btnSecreteLoveChapter"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Chapter"
                                android:textColor="@color/white">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
                    <!--The Lady's Butler-->
                        <LinearLayout
                            android:layout_marginTop="@dimen/m10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/container2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">
                                <ImageView
                                    android:id="@+id/TheLadyButlerImg"
                                    android:layout_width="190dp"
                                    android:layout_height="130dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img_13"
                                    android:contentDescription="@string/image" />
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_marginStart="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtTheLadyButlerImg"
                                tools:text="The Lady Butler"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/Greenie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtDes"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="@string/TheLadyButler"
                                android:textSize="14sp" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <Button
                                        android:id="@+id/btnTheLady"
                                        android:layout_width="100dp"
                                        android:layout_height="50sp"
                                        android:backgroundTint="@color/Greenie"
                                        android:text="Read"
                                        android:textColor="@color/white">
                                    </Button>
                                    <Button
                                        android:id="@+id/btnEpTheLady"
                                        android:layout_width="100dp"
                                        android:layout_height="50sp"
                                        android:backgroundTint="@color/Greenie"
                                        android:text="Chapter"
                                        android:textColor="@color/white">
                                    </Button>
                                </LinearLayout>
                        </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
<!--The Tyrant's Only Perfumer-->
            <LinearLayout
                android:layout_marginTop="@dimen/m10"
                android:id="@+id/TheTyrantOnlyPerfumer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_14"
                            android:layout_width="190dp"
                            android:layout_height="130dp"
                            android:contentDescription="@string/image" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            tools:text="The 0nly Perfumer"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/Greenie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/TheTyrantOnlyPerfumer"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btnTheTyrantOnlyPerfumer"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Read"
                                android:textColor="@color/white">
                            </Button>
                            <Button
                                android:id="@+id/btnEpTheTy"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Chapter"
                                android:textColor="@color/white">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
<!--I Didn't Mean to Seduce the Male Lead!-->
            <LinearLayout
                android:layout_marginTop="@dimen/m10"
                android:id="@+id/theMaleLead"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_15"
                            android:layout_width="190dp"
                            android:layout_height="130dp"
                            android:contentDescription="@string/image" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            tools:text="Seduce the MaleLead"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/Greenie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/theMaleLead"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btntheMaleLead"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Read"
                                android:textColor="@color/white">
                            </Button>
                            <Button
                                android:id="@+id/btnEpThe"
                                android:layout_marginStart="5dp"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Chapter"
                                android:textColor="@color/white">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
<!--Flirting with The Villain's Dad-->
            <LinearLayout
                android:layout_marginTop="@dimen/m10"
                android:id="@+id/flirtingWithTheDad"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_16"
                            android:layout_width="190dp"
                            android:layout_height="130dp"
                            android:contentDescription="@string/image" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            tools:text="Flirting The VillainDad"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/Greenie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/FlirtingwithDad"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btnFlirtingWithTheDad"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Read"
                                android:textColor="@color/white">
                            </Button>
                            <Button
                                android:id="@+id/btnEpFlirt"
                                android:layout_marginStart="5dp"
                                android:layout_width="100dp"
                                android:layout_height="50sp"
                                android:backgroundTint="@color/Greenie"
                                android:text="Chapter"
                                android:textColor="@color/white">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
