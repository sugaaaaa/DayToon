<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s20"
        android:layout_gravity="start"
        android:src="@drawable/back">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/img_17" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="@dimen/m10"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret Love"/>
    <TextView
        android:id="@+id/description"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Secret Love manga often involves elements of tension, emotional struggle, and character development as individuals navigate their romantic feelings in a clandestine manner. This theme is commonly found in various manga genres, including romance, drama, and slice of life, contributing to the diversity of narratives within the manga medium. Readers are drawn to the intrigue and emotional depth that arise from the secret or concealed aspect of the characters' romantic relationships." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0.0" >
        </RatingBar>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/m10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSecreteLove"
            android:layout_width="100dp"
            android:layout_height="50sp"
            android:backgroundTint="@color/Greenie"
            android:text="Read"
            android:textColor="@color/white"
            tools:ignore="ButtonStyle">
        </Button>
        <Button
            android:layout_marginStart="@dimen/s20"
            android:id="@+id/btnSecreteLoveChapter"
            android:layout_width="100dp"
            android:layout_height="50sp"
            android:backgroundTint="@color/Greenie"
            android:text="Chapter"
            android:textColor="@color/white"
            tools:ignore="ButtonStyle">
        </Button>
    </LinearLayout>
</LinearLayout>